<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".DiseaseDetailActivity">

    <FrameLayout
        android:id="@+id/cardSelamatDatang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_selamat_datang"
        android:elevation="10dp"
        android:layout_marginBottom="16dp">

        <!-- Tombol Kembali -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="16dp"
            android:background="@android:color/transparent"
            android:contentDescription="Tombol Kembali"
            android:scaleType="centerInside"
            android:src="@drawable/arr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/iv_disease"
                android:layout_width="220dp"
                android:layout_height="160dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/indicator_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="NAMA PENYAKIT"
                android:textColor="#FFFFFF"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/baloo"
                android:gravity="center" />
        </LinearLayout>
    </FrameLayout>




    <!-- ScrollView konten utama -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Deskripsi -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#D7F5D5">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:gravity="center"
                    android:text="Deskripsi Penyakit"
                    android:textAlignment="center"

                    android:textColor="#1F3E21"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Deskripsi penyakit akan ditampilkan di sini."
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Penyebab -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#D7F5D5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Penyebab"
                        android:textStyle="bold"
                        android:textColor="#1F3E21"
                        android:textSize="18sp"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tv_cause"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Informasi penyebab akan ditampilkan di sini."
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#D7F5D5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Pencegahan"
                        android:textStyle="bold"
                        android:textColor="#1F3E21"
                        android:textSize="18sp"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tv_prevention"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Informasi pencegahan akan ditampilkan di sini."
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp">


            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="#D7F5D5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Perawatan"
                        android:textStyle="bold"
                        android:textColor="#1F3E21"
                        android:textSize="18sp"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:textAlignment="center" />

                    <TextView
                        android:id="@+id/tv_treatment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="Informasi perawatan akan ditampilkan di sini."
                        android:textSize="16sp"
                        android:textColor="#444444"
                        android:fontFamily="@font/baloo"
                        android:gravity="center"
                        android:textAlignment="center" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
