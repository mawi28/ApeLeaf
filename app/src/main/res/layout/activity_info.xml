<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <FrameLayout
        android:id="@+id/cardSelamatDatang"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:background="@drawable/bg_selamat_datang"
        android:elevation="10dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Konten horizontal: gambar + teks -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp">

            <!-- Gambar di sebelah kiri -->
            <ImageView
                android:id="@+id/imageWelcome"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_welcome"
                android:scaleType="centerCrop" />

            <!-- Kontainer vertikal untuk judul dan deskripsi -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textSelamatDatang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo"
                    android:text="MAIN MENU"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textDeskripsi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gunakan fitur deteksi penyakit untuk mengetahui kondisi kesehatan daun apel anda"
                    android:textSize="12sp"
                    android:textColor="#FFFFFF"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>

    <!-- ScrollView dengan semua konten -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardSelamatDatang"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="5dp">


        <!-- Jenis Penyakit -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="ðŸŒ¿ Kenali Jenis Penyakit Pada Daun Apel"
                android:textColor="#1F3E21"
                android:textSize="18sp" />

            <!-- Cards penyakit dibuat memanjang dan horizontal -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="24dp">

                <!-- Card 1: Apple Cedar Rust -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAppleCedarRust"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#D7F5D5"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:strokeColor="#1F3E21"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/rust"
                            android:clipToOutline="true"
                            android:background="@drawable/circle_background" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo"
                            android:text="Apple Cedar Rust"
                            android:textColor="#1F3E21"
                            android:textSize="16sp" />

                        <!-- Panah kanan -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                           />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 2: Apple Scab -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardAppleScab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#D7F5D5"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:strokeColor="#1F3E21"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/scab"
                            android:clipToOutline="true"
                            android:background="@drawable/circle_background" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo"
                            android:text="Apple Scab"
                            android:textColor="#1F3E21"
                            android:textSize="16sp" />

                        <!-- Panah kanan -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                             />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Card 3: Black Rot -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardBlackRot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="#D7F5D5"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="10dp"
                    app:strokeColor="#1F3E21"
                    app:strokeWidth="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/blackrot"
                            android:clipToOutline="true"
                            android:background="@drawable/circle_background" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/baloo"
                            android:text="Black Rot"
                            android:textColor="#1F3E21"
                            android:textSize="16sp" />

                        <!-- Panah kanan -->
                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                             />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardStartDetection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#3F7042"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:strokeColor="#2E5D32"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:contentDescription="Scan Icon"
                        android:src="@drawable/phone"
                        android:layout_gravity="center_vertical"
                         />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnStartDetection"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:backgroundTint="#BEECC0"
                        android:text="Mulai Pindai Penyakit"
                        android:textColor="#1F3E21"
                        android:textSize="15sp"
                        android:fontFamily="@font/baloo"
                        app:cornerRadius="24dp"
                        app:elevation="8dp"
                        app:icon="@drawable/ic_scan"
                    app:iconPadding="12dp"
                    app:iconTint="#1F3E21"
                    app:iconGravity="textStart" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/tentangAplikasiCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:paddingBottom="10dp"
                app:cardBackgroundColor="#3F7042"
                app:cardCornerRadius="15dp"
                app:cardElevation="10dp"
                app:strokeColor="#2E5D32"
                app:strokeWidth="2dp">


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/iconTentang"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="78dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginEnd="12dp"
                        app:srcCompat="@drawable/tntg" />

                    <TextView
                        android:id="@+id/textTentang"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="3dp"
                        android:fontFamily="@font/baloo"
                        android:text="Tentang Aplikasi"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
